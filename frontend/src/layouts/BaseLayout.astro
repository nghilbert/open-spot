---
import "../assets/styles/global.css";

interface Props {
	title: string
};

const { title = "Open Spot" } = Astro.props;

/* Base HTML layout for all pages. Renders content inside <slot /> */
---

<!doctype html>
<html lang="en">
	<head>
		<script>
			// If the user is running dark mode, set bootstrap variable?
			const isDarkMode = window.matchMedia("(prefers-color-scheme: dark)").matches;
			if (isDarkMode) document.documentElement.setAttribute("data-bs-theme", "dark");
		</script>

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />

		<footer class="site-footer">
			<small>&copy; Open Spot</small>
		</footer>
	</body>
</html>
