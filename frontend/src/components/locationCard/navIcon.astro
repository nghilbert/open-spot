---
interface Props {
	addressString: string;
	name: string;
}

const { addressString, name } = Astro.props;
---

<a
	class="navIcon mt-2"
	href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(addressString || name)}`}
	target="_blank"
	rel="noopener noreferrer"
	title="Open in Google Maps"
	aria-label={`Open ${addressString || name} in Google Maps`}
>
	<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
		<path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z" fill="currentColor"></path>
		<circle cx="12" cy="9" r="2.5" fill="#05122a"></circle>
	</svg>
</a>
