---
const title = "Finish setting up your profile";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root {
        --bg: #0b1020;
        --panel: #111936;
        --panel-2: #0e1530;
        --text: #ffffff;
        --muted: #dfe5f5;
        --primary: #5aa2ff;
        --primary-600: #4a8ae0;
        --ring: rgba(90, 162, 255, 0.35);
        --radius: 16px;
        --radius-sm: 10px;
        --shadow: 0 10px 30px rgba(0, 0, 0, 0.35);

        /* Match the Name panel (input.control) */
        --field-bg: rgba(255,255,255,0.04);
        --field-border: rgba(255,255,255,0.18);

        /* Select palette now matches field style */
        --select-fg: var(--text);             /* white text */
        --select-bg: var(--field-bg);         /* same translucent bg */
        --select-border: var(--field-border); /* same border */
        --select-hover-bg: rgba(255,255,255,0.08);
        --select-hover-fg: var(--text);
        --select-font-size: 16px;
        --select-font-weight: 700;
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; margin: 0; }

      body {
        background: radial-gradient(1200px 800px at 10% -10%, #13214a 0%, var(--bg) 40%, #090e1d 100%);
        color: var(--text);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji";
        line-height: 1.45;
        min-height: 100dvh;
        display: grid;
        place-items: center;
        padding: 24px;
      }

      a { color: var(--primary); text-underline-offset: 3px; }

      .wrap {
        width: 100%;
        max-width: 760px;
        display: grid;
        gap: 18px;
        justify-items: center;
      }

      .header { display: grid; justify-items: center; gap: 10px; text-align: center; }

      .brandMark {
        width: 36px; height: 36px; border-radius: 10px;
        background: linear-gradient(135deg, var(--primary), #9ad0ff);
        box-shadow: inset 0 0 8px rgba(255,255,255,0.15), 0 8px 20px rgba(90,162,255,0.35);
      }

      .h1 { font-size: clamp(22px, 3vw, 32px); font-weight: 750; letter-spacing: -0.02em; margin: 0; }
      .sub { color: var(--text); margin: 0; }

      .card {
        width: 100%;
        background: linear-gradient(180deg, var(--panel) 0%, var(--panel-2) 100%);
        border: 1px solid rgba(255,255,255,0.10);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 22px;
      }

      form { display: grid; gap: 18px; }

      .sectionTitle {
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.14em;
        color: var(--muted);
        margin: 4px 0 8px 0;
        text-align: center;
      }

      .field { display: grid; gap: 8px; }
      .field.centered { justify-items: center; text-align: center; }

      label { font-weight: 600; color: var(--text); }
      .help { color: var(--text); font-size: 13px; }

      /* Text input (Name) */
      .control {
        width: 100%;
        border-radius: var(--radius-sm);
        background: var(--field-bg);
        border: 1px solid var(--field-border);
        padding: 12px 14px;
        color: var(--text);
        outline: none;
        transition: border-color 120ms ease, box-shadow 120ms ease, background 120ms ease, transform 60ms ease;
      }
      .control::placeholder { color: #eef1f8; }
      .control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 6px var(--ring);
      }

      /* Segmented control */
      .seg {
        display: flex;
        background: var(--field-bg);
        border: 1px solid var(--field-border);
        border-radius: var(--radius-sm);
        padding: 6px;
        gap: 6px;
        width: fit-content;
      }
      .seg button {
        border: none;
        background: transparent;
        color: var(--text);
        padding: 10px 14px;
        border-radius: 10px;
        cursor: pointer;
        transition: transform 60ms ease, background 120ms ease, color 120ms ease;
        font-weight: 600;
      }
      .seg button[aria-pressed="true"] {
        background: linear-gradient(180deg, rgba(90,162,255,0.25), rgba(90,162,255,0.15));
        outline: 1px solid rgba(90,162,255,0.45);
      }
      .seg button:active { transform: translateY(1px); }

      .hidden { display: none !important; }

      .actions { display: flex; gap: 12px; justify-content: center; margin-top: 6px; }

      .btn {
        appearance: none;
        border: 1px solid rgba(255,255,255,0.25);
        background: rgba(255,255,255,0.04);
        color: var(--text);
        padding: 12px 16px;
        border-radius: 12px;
        cursor: pointer;
        font-weight: 650;
        transition: transform 60ms ease, filter 120ms ease, background 120ms ease, box-shadow 120ms ease, border-color 120ms ease;
      }
      .btn:active { transform: translateY(1px); }
      .btn.primary {
        background: linear-gradient(180deg, var(--primary) 0%, var(--primary-600) 100%);
        border-color: rgba(90,162,255,0.6);
        color: #05122a;
        box-shadow: 0 10px 20px rgba(90,162,255,0.25), inset 0 0 8px rgba(255,255,255,0.25);
      }
      .btn.primary:disabled { filter: grayscale(0.7); opacity: 0.7; cursor: not-allowed; }

      /* Status line (no bubble) */
      .status { margin-top: 6px; color: var(--text); font-size: 14px; text-align: center; }

      /* ===== SELECT now matches the Name panel ===== */
      .select {
        width: 100%;
        border-radius: var(--radius-sm);
        background: var(--select-bg);           /* same as Name field */
        border: 1px solid var(--select-border); /* same as Name field */
        padding: 12px 14px;
        color: var(--select-fg);                /* white text */
        font-size: var(--select-font-size);
        font-weight: var(--select-font-weight);
        outline: none;
        transition: border-color 120ms ease, box-shadow 120ms ease, background 120ms ease, transform 60ms ease;

        /* visible chevron on dark bg */
        appearance: none;
        background-image:
          linear-gradient(45deg, transparent 50%, #fff 50%),
          linear-gradient(135deg, #fff 50%, transparent 50%),
          linear-gradient(to right, transparent, transparent);
        background-position:
          calc(100% - 18px) 50%,
          calc(100% - 13px) 50%,
          0 0;
        background-size: 5px 5px, 5px 5px, 100% 100%;
        background-repeat: no-repeat;
      }
      .select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 6px var(--ring);
      }

      /* Open menu items (Chromium/Firefox) — dark to match panel */
      select.select option {
        color: var(--select-fg);              /* white */
        background: #0f1733;                  /* dark menu surface for contrast */
        font-size: var(--select-font-size);
        font-weight: var(--select-font-weight);
        line-height: 1.4;
      }
      select.select option:hover,
      select.select option:checked {
        background: var(--select-hover-bg);   /* subtle lighter dark */
        color: var(--select-hover-fg);        /* white */
      }
      /* Safari may limit option hover styling; base colors still apply */
    </style>
  </head>
  <body>
    <div class="wrap">
      <div class="header">
        <div class="brandMark" aria-hidden="true"></div>
        <div class="h1">Finish setting up your profile</div>
        <div class="sub">Choose your account type and (if you drive) your parking permit. You can change these later.</div>
      </div>

      <div class="card" role="region" aria-labelledby="onboard-title">
        <h2 id="onboard-title" class="sectionTitle">Onboarding</h2>

        <form id="onboardingForm" novalidate>
          <!-- Account Type FIRST -->
          <div class="field centered">
            <label id="acctTypeLabel">Account Type</label>
            <div class="seg" role="group" aria-labelledby="acctTypeLabel">
              <button type="button" class="segBtn" data-value="Driver" aria-pressed="true">Driver</button>
              <button type="button" class="segBtn" data-value="Cyclist" aria-pressed="false">Cyclist</button>
            </div>
            <input type="hidden" id="accountType" name="accountType" value="Driver" />
          </div>

          <!-- Name -->
          <div class="field">
            <label for="fullName">Your Name</label>
            <input class="control" id="fullName" name="fullName" type="text" placeholder="e.g., Alex Johnson" autocomplete="name" required />
            <div class="help">This will be shown on your profile.</div>
          </div>

          <!-- Parking permit (only for Drivers) -->
          <div id="permitGroup" class="field">
            <label for="permit">Parking Permit</label>
            <select id="permit" name="permit" class="select" required>
              <option value="" disabled selected>Select your permit…</option>
              <option value="Commuter">Commuter</option>
              <option value="Faculty/Staff">Faculty/Staff</option>
              <option value="All Parking Garage Zone">All Parking Garage Zone</option>
            </select>
            <div class="help">Required for Drivers. Not needed for Cyclists.</div>
          </div>

          <div id="msg" class="status" aria-live="polite"></div>

          <div class="actions">
            <button type="button" class="btn" id="cancelBtn">Skip for now</button>
            <button type="submit" class="btn primary" id="submitBtn">Save & Continue</button>
          </div>
        </form>
      </div>
    </div>

    <div id="toast" class="toast" role="status" aria-live="polite">Profile saved. You’re all set!</div>

    <script type="module">
      const form = document.getElementById('onboardingForm');
      const segButtons = Array.from(document.querySelectorAll('.segBtn'));
      const accountTypeHidden = document.getElementById('accountType');
      const permitGroup = document.getElementById('permitGroup');
      const permitSelect = document.getElementById('permit');
      const msg = document.getElementById('msg');
      const toast = document.getElementById('toast');
      const cancelBtn = document.getElementById('cancelBtn');
      const submitBtn = document.getElementById('submitBtn');
      const fullName = document.getElementById('fullName');

      function setAccountType(value) {
        accountTypeHidden.value = value;
        segButtons.forEach(b => b.setAttribute('aria-pressed', String(b.dataset.value === value)));
        const isDriver = value === 'Driver';
        permitGroup.classList.toggle('hidden', !isDriver);
        permitSelect.required = isDriver;
        if (!isDriver) permitSelect.value = '';
        msg.textContent = isDriver
          ? 'Drivers must select a parking permit.'
          : 'Cyclists don’t need a parking permit.';
      }

      segButtons.forEach(btn => btn.addEventListener('click', () => setAccountType(btn.dataset.value)));

      // Default selection
      setAccountType(accountTypeHidden.value || 'Driver');

      function validate() {
        msg.textContent = '';
        const problems = [];
        if (!fullName.value.trim()) problems.push('Please enter your name.');
        const acct = accountTypeHidden.value;
        if (acct === 'Driver' && !permitSelect.value) problems.push('Please choose a parking permit.');
        if (problems.length) { msg.textContent = problems.join(' '); return false; }
        return true;
      }

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!validate()) return;
        submitBtn.disabled = true;

        const payload = {
          fullName: fullName.value.trim(),
          accountType: accountTypeHidden.value,
          permit: accountTypeHidden.value === 'Driver' ? permitSelect.value : null,
        };

        try {
          await new Promise(r => setTimeout(r, 450)); // simulate
          toast.classList.add('show');
          msg.textContent = 'Saved! Redirecting…';
          setTimeout(() => { window.location.href = '/dashboard'; }, 900);
        } catch (err) {
          console.error(err);
          msg.textContent = 'Something went wrong saving your profile. Please try again.';
        } finally {
          submitBtn.disabled = false;
        }
      });

      cancelBtn.addEventListener('click', () => { window.location.href = '/'; });

      document.querySelector('.seg')?.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') {
          e.preventDefault();
          const current = accountTypeHidden.value;
          setAccountType(current === 'Driver' ? 'Cyclist' : 'Driver');
        }
      });
    </script>
  </body>
</html>
