---
export const prerender = false;
import BaseLayout from "src/layouts/BaseLayout.astro";

const res = await fetch(`${Astro.url.origin}/api/timer/confirm`, {
    method: "POST",
	headers: {
		Cookie: `session=${Astro.cookies.get("session")?.value}`,
	},
});
---

<BaseLayout title="Are you still there?">
    <div class="container">
        <span>{ res.ok ? "Parking spot confirmed!" : "Error confirming, try again later."}</span>
    </div>
</BaseLayout>

<style>
    .container {
        justify-content: center;
        align-items: center;
        text-align: center;
        display: flex;
        width: 100%;
        height: 100%;
    }

    span {
        padding: 50px;
    }
</style>