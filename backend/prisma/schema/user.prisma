enum Role {
  NONE
  ADMIN
}

model User {
  id            Int        @id @default(autoincrement())
  username      String     @default("")
  email         String     @unique
  emailVerified Boolean    @default(false)
  password      Password   @relation("CurrentPassword", fields: [PasswordID], references: [passwordId])
  PasswordID    String     @unique
  oldPasswords  Password[] @relation("OldPasswords")
  name          String
  sessions      Session[]
  oauths        OAuth[]
  role          Role       @default(NONE)
  createdOn     DateTime   @default(now())
}