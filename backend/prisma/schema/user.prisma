enum Role {
  NONE
  MEMBER
  ADMIN
}

enum UserType {
  DRIVER
  CYCLIST
  NONE
}

model User {
  id            Int        @id @default(autoincrement())
  username      String     @default("")
  email         String     @unique
  emailVerified Boolean    @default(false)
  password      Password   @relation("CurrentPassword", fields: [PasswordID], references: [passwordId], onDelete: Cascade)
  PasswordID    String     @unique
  oldPasswords  Password[] @relation("OldPasswords")
  name          String
  sessions      Session[]
  role          Role       @default(NONE)
  permit        Permit     @default(NONE)
  userType      UserType       @default(NONE)
  createdOn     DateTime   @default(now())
  timer         Timer?
}