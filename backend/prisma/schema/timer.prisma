enum TimerType {
    ACTIVE
    EXPIRED
    RESET
}

model Timer {
    id Int @id @default(autoincrement())
    userId Int @unique
    locationId Int

    startTime DateTime
    endTime DateTime
    status TimerType

    user User @relation(fields: [userId], references: [id])
    location Location @relation(fields: [locationId], references: [id])
}